{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/4": {
    "description": "serves an object of a specific article",
    "queries": [],
    "exampleResponse": {
      "author": "MrOnyango",
      "title": "Coding is difficult",
      "article_id": 2,
      "body": "Text from the article..",
      "topic": "coding",
      "created_at": "2025-03-10T15:03:13.341Z",
      "votes": 123,
      "article_img_url": "https://yabadabdo.com",
      "comment_count": 20
    }
  },
  "GET /api/articles/4/comments": {
    "description": "serves an array of comments for a specific article id",
    "queries": ["sort_by"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 5,
          "votes": 123,
          "created_at": "2025-03-10T15:03:13.341Z",
          "author": "MrOnyango",
          "body": "Text from the article..",
          "article_id": 3
        }
      ]
    }
  }
}